@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="ForgetPassword" method="post">
			<div asp-validation-summary="ModelOnly"></div>
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			
			<input type="submit" value="Send Email">
		</form>
		<p>If you do not have Account  <a asp-action="SignUp"> Register Now!</a></p>
	</div>
</div>

@section ValidationScript {

	<partial name="_ValidationScriptsPartial" />

}
