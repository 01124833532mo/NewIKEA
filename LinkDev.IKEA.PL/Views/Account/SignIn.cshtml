@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignIn</h1>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn" method="post">
		<div asp-validation-summary="ModelOnly" ></div>
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text mb-2" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RemmberMe" class="checkbox" required="">
					<span>Remmber Me ?</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>If you do not have Account  <a asp-action="SignUp"> Register Now!</a></p>
	</div>
</div>


@section ValidationScript {

	<partial name="_ValidationScriptsPartial" />

}
