
@model CreatedEmployeeDto

@{
	ViewData["Title"] = "Create";
}

<h1 class="row justify-content-center align-items-center">Create Emploee</h1>



<div class="row justify-content-center align-items-center flex-column">

	<form action="/Employee/Create" method="post" class="col-8">


		<div asp-validation-summary="ModelOnly"></div>



		<div class=" form-group mb-3">

			<label class="form-label " asp-for="Name"></label>

			<input asp-for="Name" class="form-control mt-3" />

			<span asp-validation-for="Name" class="text-danger"></span>


		</div>
		<div class=" form-group mb-3">

			<label class="form-label " asp-for="Email"></label>

			<input asp-for="Email" class="form-control mt-3" />

			<span asp-validation-for="Email" class="text-danger"></span>


		</div>

		<div class=" form-group mb-3">

			<label class="form-label " asp-for="Adress"></label>

			<input asp-for="Adress" class="form-control mt-3" />

			<span asp-validation-for="Adress" class="text-danger"></span>


		</div>
		<div class=" form-group mb-3">

			<label class="form-label " asp-for="HiringDate"></label>

			<input type="date" asp-for="HiringDate" class="form-control mt-3" />

			<span asp-validation-for="HiringDate" class="text-danger"></span>


		</div>
		<div class=" form-group mb-3">

			<label class="form-label" asp-for="Age"></label>

			<input asp-for="Age" class="form-control mt-3" />

			<span asp-validation-for="Age" class="text-danger"></span>


		</div>
		<div class=" form-group mb-3">

			<label class="form-label " asp-for="Salary"></label>

			<input asp-for="Salary" class="form-control mt-3" />

			<span asp-validation-for="Salary" class="text-danger"></span>


		</div>
		<div class=" form-group mb-3">

			<label class="form-label" asp-for="PhoneNumber"></label>

			<input asp-for="PhoneNumber" class="form-control mt-3" />

			<span asp-validation-for="PhoneNumber" class="text-danger"></span>


		</div>
		
		<div class="form-group my-3 ">
			<label class="control-label" asp-for="Gender"></label > <br/>
			@foreach (Gender genderoption in Enum.GetValues(typeof(Gender)))
			{
				<label class="radio-inline" >
					<input type="radio" asp-for="Gender" value="@genderoption" />
					@genderoption
				</label>
			}

		</div>

		<div class="form-group my-3">
			<label asp-for="EmployeeType" class="control-label" ></label>
			<select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>() " class="form-control" >


			</select>

		</div>
		


		<div class=" form-group mb-3">


			<input asp-for="IsActive" class="form-check-input " />

			<label class="form-check-label" asp-for="IsActive"></label>




		</div>
		<div class="mt-4 ">

			<input type="submit" value="Create" class="btn btn-primary" /> |

			<a asp-action="Index" class="btn btn-dark">Back to List</a>

		</div>
	</form>

</div>
