@model CreatedDepartmentDto

@{
	ViewData["Title"] = "Create";
}

<h1 class="row justify-content-center align-items-center">Create Department</h1>

<div class="row justify-content-center align-items-center flex-column">

	<form action="/Department/Create"   method="post" class="col-8">


		<div asp-validation-summary="ModelOnly"></div>

		<div class=" form-group mb-3">

			<label class="form-label" asp-for="Code"></label>

			<input asp-for="Code" class="form-control" />

			<span asp-validation-for="Code" class="text-danger"></span>


		</div>

		<div class=" form-group mb-3">

			<label class="form-label" asp-for="Name"></label>

			<input asp-for="Name" class="form-control" />

			<span asp-validation-for="Name" class="text-danger"></span>


		</div>

		<div class=" form-group mb-3">

			<label class="form-label" asp-for="Description"></label>

			<textarea asp-for="Description" class="form-control"></textarea>

		</div>

		<div>

			<label class="form-group mb-3" for="DateOfCreation"> Date Of Creation </label>

			<input type="date" asp-for="CreationDate" class="form-control" />

		</div>

		<div class="mt-4 ">

			<input type="submit" value="Create" class="btn btn-primary" /> |

			<a asp-action="Index" class="btn btn-dark">Back to List</a>

		</div>

	</form>
</div>

@section ValidationScript {

	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

  