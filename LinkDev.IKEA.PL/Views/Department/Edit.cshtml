@model DepartmentViewModel

@{
    ViewData["Title"] = "Edit";
    ViewBag.Action = "Edit";
}
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="toast show fade" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
            <div class="toast-header bg-primary text-white">
                <div class="rounded bg-white p-1 me-2" style="width: 20px; height: 20px;"></div>
                <strong class="me-auto">IKEA</strong>
                <small class="text-light">Just now</small>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body bg-light">
                <span class="fw-bold text-primary">ℹ️</span> @TempData["Message"]
            </div>
        </div>
    </div>
}



<div class="row justify-content-center align-items-center">
    <h1 class="row justify-content-center align-items-center">Edit Department</h1>

    <partial name="Partials/CreateEditDepartmentPartial" />


</div>

@section ValidationScript {

    <partial name="_ValidationScriptsPartial" />


}


