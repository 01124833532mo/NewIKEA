@model UpdatedDepartmentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Update Department</h1>

<div class="row justify-content-center align-items-center">
 
    <form asp-controller="Department"  asp-action="Edit" method="post" class="col-8">
       
        <div asp-validation-summary="ModelOnly"></div>

       
        <div class="form-group mb-3">
         
            <label asp-for="Code" class="form-label"></label>
          
            <input asp-for="Code" class="form-control" />
          
            <span asp-validation-for="Code" class="text-danger"></span>
      
        </div>

       
        <div class="form-group mb-3">
          
            <label asp-for="Name" class="form-label"></label>
          
            <input asp-for="Name" class="form-control" />
          
            <span asp-validation-for="Name" class="text-danger"></span>
       
        </div>

      
        <div class="form-group mb-3">
            
            <label asp-for="Description" class="form-label"></label>
           
            <textarea asp-for="Description" class="form-control"></textarea>
           
            <span asp-validation-for="Description" class="text-danger"></span>
      
        </div>

       
        <div class="form-group mb-3">
           
            <label for="CreationDate">Date Of Creation</label>
           
            <input type="date" asp-for="CreationDate" class="form-control" />
           
            <span asp-validation-for="CreationDate" class="text-danger"></span>
      
        </div>

      
        <div class="mt-4">
         
            <input type="submit" value="Save" class="btn btn-success" /> |
           
            <a asp-action="Index" class="btn btn-dark">Cancel</a>
       
        </div>
   
    </form>

</div>
